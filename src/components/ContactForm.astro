<!-- src/components/ContactForm.astro -->
<form action="#" method="POST">
    <div class="form-group">
      <label for="name">Nombre</label>
      <input type="text" id="name" name="name" required>
    </div>
    
    <div class="form-group">
      <label for="email">Correo Electrónico</label>
      <input type="email" id="email" name="email" required>
    </div>
    
    <div class="form-group">
      <label for="phone">Teléfono (opcional)</label>
      <input type="tel" id="phone" name="phone">
    </div>
    
    <div class="form-group">
      <label for="subject">Asunto</label>
      <textarea id="subject" name="subject" rows="5" maxlength="200" required></textarea>
      <p class="word-count">0/200 palabras</p>
    </div>
    
    <button type="submit">Enviar</button>
  </form>
  
  <style scoped>
    .form-group {
      margin-bottom: 15px;
    }
    
    label {
      display: block;
      margin-bottom: 5px;
    }
    
    input, textarea {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    
    textarea {
      resize: vertical;
    }
    
    button {
      padding: 10px 15px;
      background-color: #1368ea;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    
    button:hover {
      background-color: #0b51b5;
    }
  
    .word-count {
      font-size: 12px;
      color: #999;
      text-align: right;
    }
  </style>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const textarea = document.getElementById('subject') as HTMLTextAreaElement | null;
      const wordCountDisplay = document.querySelector('.word-count');
  
      if (textarea && wordCountDisplay) {
        textarea.addEventListener('input', () => {
          const wordCount = textarea.value.length;
          wordCountDisplay.textContent = `${wordCount}/200 palabras`;
        });
      }
    });
  </script>
  
  